<div class="container">
  <div class="row">
    {{!-- Login --}}
    <div class="col-lg-6">
      <h4>Log In</h4>
      <form class="form login-form">
        <div class="form-group">
          <label for="loginUser">Username</label>
          <input type="text" class="form-input" id="loginUser">
        </div>
        <div class="form-group">
          <label for="loginPassword">Password</label>
          <input type="password" class="form-input" id="loginPassword">
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Log In</button>
        </div>
      </form>
    </div>
    {{!-- Sign up --}}
    <div class="col-lg-6">
      <h4>Sign In</h4>
      <form class="form signup-form">
        <div class="form-group">
          <label for="user-signup">Username</label>
          <input type="text" class="form-input" id="user-signup">
        </div>
        <div class="form-group">
          <label for="email-signup">Email</label>
          <input type="text" class="form-input" id="email-signup" />
        </div>
        <div class="form-group">
          <label for="password-signup">Password</label>
          <input type="password" class="form-input" id="password-signup" />
        </div>
        <div class="form-group">
          <button class="btn btn-primary" type="submit">Sign In</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="/js/login.js"></script>